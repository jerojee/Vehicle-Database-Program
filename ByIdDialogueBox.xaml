<Window x:Class="VehicleService.ByIdDialogueBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehicleService"
        mc:Ignorable="d"
        Title="By Vehicle Id"  Background="#1f2733" Height="180" Width="350">
    <Grid Margin="0,0,2,1">
        <Label  Content="Enter the ID of the vehicle :" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Calendar HorizontalAlignment="Left" Margin="449,207,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VehicleIdBox" HorizontalAlignment="Left" Height="23" Margin="168,43,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="153"/>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Margin="63,103,0,0" VerticalAlignment="Top" Width="88"
                Click="Handle_OkButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="168,103,0,0" VerticalAlignment="Top" Width="88"
                Click="Handle_CancelButton_Click"/>

    </Grid>
</Window>
